<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Application: <%= title %></title>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <a href="/games/new">Add Game</a>
        <table>
            <thead>
                <th>ID</th>
                <th>Cover</th>
                <th>Title</th>
                <th>Release Year</th>
                <th>Action</th>
            </thead>
            <tbody>
                <% items.map(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><img src="<%= item.cover %>" alt="<%= item.title %>"></td>
                        <td><%= item.title %></td>
                        <td><%= item.release_year %></td>
                        <td>
                            <a href="/games/<%= item.id %>">View</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>